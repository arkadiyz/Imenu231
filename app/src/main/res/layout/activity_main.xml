                android:layout_width="80dp"
                android:layout_height="70dp"
                android:onClick="loadAll"
                android:text="blabla" />


            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:onClick="loadAll"
                android:text="blabla" />


            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:onClick="loadAll"
                android:text="blabla" />


            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:onClick="loadAll"
